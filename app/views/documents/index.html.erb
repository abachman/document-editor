<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= link_to 'Show', document, "data-turbolinks": "false" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for @new_document do |f| %>
  <%= f.text_field :name, placeholder: "Name"  %>
  <%= f.submit 'Create new document' %>
<% end %>
